<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorToolbarPrimaryText</item>
        <item name="colorPrimaryVariant">@color/colorToolbarSecondaryText</item>
        <item name="colorOnPrimary">@color/colorToolbarActionMenuText</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabTextApperance</item>
    </style>

    <style name="TabTextApperance" parent="TextAppearance.Design.Tab">>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>